{
  "name": "beerjs-valdivia-site",
  "version": "0.1.0",
  "description": "Encuentro de cerveza y código",
  "meta": {
    "title": "BeerJS Valdivia | Febrero 2019",
    "date": "Miércoles 27 de febrero",
    "location": "Nube Cowork, Serrano 958, Valdivia",
    "topic": "Tema: Prácticas relacionadas a proyectos y equipos de desarrollo",
    "talks": [],
    "edition": "Febrero",
    "register_link": ""
  },
  "scripts": {
    "hbs": "hbs --output ./dist --data ./package.json --helper handlebars-layouts --partial ./src/layouts/default.hbs -- ./src/pages/*.hbs",
    "serve": "live-server ./dist --wait=1000",
    "css:dev": "suitcss ./src/styles/main.css ./dist/assets/styles/main.css -w --no-lint",
    "css:build": "suitcss ./src/styles/main.css ./dist/assets/styles/main.css --no-lint -m",
    "js:dev": "babel ./src/scripts/main.js --out-file ./dist/assets/scripts/main.js",
    "js:build": "babel ./src/scripts/main.js --out-file ./dist/assets/scripts/main.js",
    "watch": "watch 'npm run hbs && npm run js:dev && npm run css:dev' src",
    "start": "npm-run-all --parallel watch serve",
    "build": "npm-run-all --parallel hbs css:build js:build",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [
    "beerjs",
    "javascript",
    "valdivia"
  ],
  "babel": {
    "presets": [
      "es2015"
    ]
  },
  "eslintConfig": {
    "parserOptions": {
      "parser": "babel-eslint"
    },
    "env": {
      "browser": true
    },
    "extends": [
      "standard"
    ]
  },
  "author": "raulghm",
  "license": "ISC",
  "dependencies": {
    "cata-base": "^4.0.0",
    "cata-breakpoints": "^0.2.0",
    "cata-types": "^0.1.0-alpha.1",
    "cata-variables": "^0.1.0",
    "handlebars-layouts": "^3.1.4",
    "hbs-cli": "^1.2.0",
    "suitcss-preprocessor": "^4.0.0"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-eslint": "^10.0.1",
    "babel-preset-es2015": "^6.24.1",
    "eslint": "^5.6.1",
    "eslint-config-standard": "^12.0.0",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-node": "^7.0.1",
    "eslint-plugin-promise": "^4.0.1",
    "eslint-plugin-standard": "^4.0.0",
    "live-server": "^1.2.0",
    "npm-run-all": "^4.1.3",
    "watch": "^1.0.2"
  }
}
